<div id="sign_in_form" style="display: none;">
	<%= form_for(:user, :url => session_path(:user)) do |f| %>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me %>
		<%= f.submit 'Sign in' %>
		<%= link_to "Forgot your password?", new_password_path(:user) %>
	<% end %>
</div>