<script type="text/javascript">
	$('document').ready(function(){
		var about_general = $('.about_general');
		general_size = set_about_general_size(about_general);
		about_general.css({width: general_size, height: "498px"});
	});


	$('.about_stats ul li').click(function(){
		const selected_icon = $(this).children().first();
		set_tab_formatting($(this), selected_icon);
	});
	$('.linked_in').click(function(){
		window.location.href = 'https://www.linkedin.com/in/kpr-accountancy-3257a110a';
	});


	function set_tab_formatting(object, selected_icon){
		if (object.width() == 40){
			object.animate({width: "+=50px"}, 100);
			$(selected_icon).delay(40).animate({paddingLeft: "+=50px"}, 200);
		} else {
			object.animate({width: "-=50px"}, 100);
			$(selected_icon).animate({paddingLeft: "-=50px"}, 200);
		}
	}
	function set_about_general_size(about_general){
		const chart_location = $('#doughnutChart').offset().left;
		const general_location = about_general.offset().left;
		general_size = chart_location - general_location - 35;
		return general_size;
	}
</script>
