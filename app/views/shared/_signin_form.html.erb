<div id="sign_in_form" style="display: none;">
	<% if flash[:error] %>
		<div class="error-message"><%= flash[:error] %></div>
	<% end %>

	<%= form_for(:resource, as: :resource_name, :url => session_path(:user)) do |f| %>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<p></p>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<p></p>
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me %>
		<p></p>
		<%= f.submit 'Sign in' %>
		<p></p>
		<%= link_to "Forgot your password?", new_password_path(:user) %>
	<% end %>
</div>